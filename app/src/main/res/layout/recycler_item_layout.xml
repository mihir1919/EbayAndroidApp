<!-- recycler_item_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- First Column: ImageView -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="98dp"
        android:layout_height="101dp"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/facebook" />

    <!-- Second Column: Vertical LinearLayout -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- First Row: Product Title -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="abcbbabababababababbab"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Second Row: Price, Time Left, Zipcode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Price -->
            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="klanflkenafl"
                android:textSize="14sp" />

            <!-- Time Left and Zipcode: Vertical LinearLayout -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Time Left -->
                <TextView
                    android:id="@+id/textViewTimeLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="akneflanlffan"
                    android:textSize="14sp" />

                <!-- Zipcode -->
                <TextView
                    android:id="@+id/textViewZipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="lkafelaf"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
